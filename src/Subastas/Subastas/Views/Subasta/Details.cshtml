@model Subastas.Domain.Subasta

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h4>Detalles de la Subasta</h4>
                <hr />
                <div class="container mt-4">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-3">
                                <img src="@Model?.IdProductoNavigation?.ImagenProducto" class="card-img" alt="Imagen de la Subasta">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.TituloSubasta</h5>
                                    <dl class="row">
                                        <dt class="col-sm-3">#:</dt>
                                        <dd class="col-sm-9">@Model.IdSubasta</dd>
                                        <dt class="col-sm-3">Monto Inicial:</dt>
                                        <dd class="col-sm-9">$@Model.MontoInicial</dd>
                                        <dt class="col-sm-3">Estado:</dt>
                                        <dd class="col-sm-9">@Model.EstaActivo</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="col-md-6">
                <h4>Pujas de Usuarios</h4>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Monto</th>
                            <th>Fecha de Pujada</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Pujas)
                        {
                            <tr>
                                <td>@item.IdUsuarioNavigation.NombreUsuario</td>
                                <td>@item.MontoPuja</td>
                                <td>@item.FechaPuja</td>
                            </tr>
                        }
                        <!-- Aquí puedes iterar sobre las pujas de los usuarios y mostrarlas en filas -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row pt-3">
            <div class="container">
                <a class="btn btn-primary" asp-controller="Pujas" asp-action="Details" asp-route-id="@Model.IdSubasta">Pujar</a>

                @* @Html.ActionLink("Edit", "Edit", new {  id = Model.IdSubasta }, new { @class = "btn btn-primary" }) *@
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <h4>Participantes de la Subasta</h4>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Fecha de Participación</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí puedes iterar sobre los participantes de la subasta y mostrarlos en filas -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

   

</body>
</html>
