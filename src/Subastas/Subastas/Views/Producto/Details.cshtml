@model Subastas.Domain.Producto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="create">
    <div class="justify-content-left btn-return">
        <img src="/assets/img/icons/returnIcon.png" alt="Regresar" height="40px">
        <a asp-action="Index">Regresar</a>
    </div>
    <br />
    <h1>Detalles del Producto</h1>
    <div>
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.IdProducto</dd>

            <dt>Nombre</dt>
            <dd>@Model.NombreProducto</dd>

            <dt>Descripción</dt>
            <dd>@Model.DescripcionProducto</dd>

            <dt>Estado</dt>
            @if(Model.EstaActivo)
            {
                <dd>Activo</dd>
            }
            else
            {
                <dd>Inactivo</dd>
            }

            <!-- Verificación y muestra de la imagen del producto -->
            @if (!string.IsNullOrEmpty(Model.ImagenProducto))
            {
                <dt>Imagen</dt>
                <dd><img src="@Model.ImagenProducto" alt="Imagen del Producto" style="max-width: 100%; max-height: 300px;"></dd>
            }
            else
            {
                <dt>Imagen</dt>
                <dd>No disponible</dd>
            }
        </dl>
    </div>
</div>